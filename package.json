{
  "name": "rics-monorepo",
  "private": true,
  "description": "Monorepo for rics - Lightweight SCSS-like CSS preprocessor",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "playground": "pnpm --filter rics-playground dev",
    "playground:build": "pnpm --filter rics-playground build",
    "clean": "rm -rf packages/*/dist apps/*/dist node_modules/.cache",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && pnpm test && changeset publish",
    "size": "echo '=== Package Sizes (ESM) ===' && ls -la packages/*/dist/*.js 2>/dev/null | awk '{printf \"%-30s %s bytes\\n\", $9, $5}'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "scss",
    "css",
    "preprocessor",
    "codemirror",
    "lightweight",
    "vite-plugin"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "packageManager": "pnpm@9.0.0"
}
