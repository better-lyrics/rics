{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "rics",
  "scopeName": "source.rics",
  "patterns": [
    { "include": "#comment" },
    { "include": "#at-rule" },
    { "include": "#variable-declaration" },
    { "include": "#ruleset" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rics",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rics",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "variable-declaration": {
      "begin": "(\\$[a-zA-Z_][a-zA-Z0-9_-]*)\\s*(:)",
      "beginCaptures": {
        "1": { "name": "variable.scss.rics" },
        "2": { "name": "punctuation.separator.key-value.scss.rics" }
      },
      "end": ";",
      "endCaptures": {
        "0": { "name": "punctuation.terminator.rule.css.rics" }
      },
      "patterns": [
        { "include": "#value" }
      ]
    },
    "variable": {
      "name": "variable.scss.rics",
      "match": "\\$[a-zA-Z_][a-zA-Z0-9_-]*"
    },
    "interpolation": {
      "name": "meta.interpolation.rics",
      "begin": "#\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.section.interpolation.begin.rics" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.interpolation.end.rics" }
      },
      "patterns": [
        { "include": "#variable" },
        { "include": "#numeric" },
        { "include": "#operator" },
        { "include": "#function" }
      ]
    },
    "at-rule": {
      "patterns": [
        {
          "begin": "(@)(mixin|function)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" },
            "3": { "name": "entity.name.function.scss.rics" }
          },
          "end": "(?=\\{)",
          "patterns": [
            { "include": "#function-parameters" }
          ]
        },
        {
          "begin": "(@)(include)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" },
            "3": { "name": "entity.name.function.scss.rics" }
          },
          "end": "(?=[;{])",
          "patterns": [
            { "include": "#function-arguments" }
          ]
        },
        {
          "begin": "(@)(for)\\s+(\\$[a-zA-Z_][a-zA-Z0-9_-]*)\\s+(from)\\b",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" },
            "3": { "name": "variable.scss.rics" },
            "4": { "name": "keyword.control.scss.rics" }
          },
          "end": "(?=\\{)",
          "patterns": [
            { "match": "\\b(through|to)\\b", "name": "keyword.control.scss.rics" },
            { "include": "#numeric" },
            { "include": "#variable" }
          ]
        },
        {
          "begin": "(@)(each)\\s+(\\$[a-zA-Z_][a-zA-Z0-9_-]*)(?:\\s*,\\s*(\\$[a-zA-Z_][a-zA-Z0-9_-]*))?\\s+(in)\\b",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" },
            "3": { "name": "variable.scss.rics" },
            "4": { "name": "variable.scss.rics" },
            "5": { "name": "keyword.control.scss.rics" }
          },
          "end": "(?=\\{)",
          "patterns": [
            { "include": "#variable" },
            { "include": "#map-or-list" }
          ]
        },
        {
          "begin": "(@)(if|else\\s+if)\\b",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" }
          },
          "end": "(?=\\{)",
          "patterns": [
            { "include": "#variable" },
            { "include": "#operator" },
            { "include": "#numeric" },
            { "include": "#string" }
          ]
        },
        {
          "match": "(@)(else|return|content)\\b",
          "captures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" }
          }
        },
        {
          "match": "(@)(while)\\b",
          "captures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" }
          }
        },
        {
          "begin": "(@)(media|supports|container)\\b",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.css.rics" },
            "2": { "name": "keyword.control.at-rule.css.rics" }
          },
          "end": "(?<=\\})",
          "patterns": [
            { "include": "#media-query" },
            { "include": "#property-list" }
          ]
        },
        {
          "begin": "(@)(keyframes)\\s+([a-zA-Z_-][a-zA-Z0-9_-]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.css.rics" },
            "2": { "name": "keyword.control.at-rule.css.rics" },
            "3": { "name": "entity.name.function.css.rics" }
          },
          "end": "(?<=\\})",
          "patterns": [
            { "include": "#keyframe-block" }
          ]
        },
        {
          "begin": "(@)(import|use|forward)\\b",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.keyword.scss.rics" },
            "2": { "name": "keyword.control.at-rule.scss.rics" }
          },
          "end": ";",
          "patterns": [
            { "include": "#string" },
            { "match": "\\b(as|with)\\b", "name": "keyword.control.scss.rics" }
          ]
        },
        {
          "match": "(@)(debug|warn|error|font-face|layer|scope)\\b",
          "captures": {
            "1": { "name": "punctuation.definition.keyword.css.rics" },
            "2": { "name": "keyword.control.at-rule.css.rics" }
          }
        }
      ]
    },
    "ruleset": {
      "begin": "(?=[:.*#a-zA-Z&\\[])",
      "end": "(?<=\\})",
      "patterns": [
        { "include": "#selector" },
        { "include": "#property-list" }
      ]
    },
    "selector": {
      "begin": "(?=[:.*#a-zA-Z&\\[])",
      "end": "(?=\\{)",
      "patterns": [
        { "include": "#comment" },
        {
          "name": "entity.name.tag.wildcard.css.rics",
          "match": "\\*"
        },
        {
          "name": "entity.other.attribute-name.class.css.rics",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
          "name": "entity.other.attribute-name.id.css.rics",
          "match": "#[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
          "name": "entity.name.tag.css.rics",
          "match": "\\b(a|abbr|address|area|article|aside|audio|b|base|bdi|bdo|blockquote|body|br|button|canvas|caption|cite|code|col|colgroup|data|datalist|dd|del|details|dfn|dialog|div|dl|dt|em|embed|fieldset|figcaption|figure|footer|form|h[1-6]|head|header|hgroup|hr|html|i|iframe|img|input|ins|kbd|label|legend|li|link|main|map|mark|menu|meta|meter|nav|noscript|object|ol|optgroup|option|output|p|picture|pre|progress|q|rp|rt|ruby|s|samp|script|section|select|slot|small|source|span|strong|style|sub|summary|sup|svg|table|tbody|td|template|textarea|tfoot|th|thead|time|title|tr|track|u|ul|var|video|wbr|path|rect|circle|ellipse|line|polyline|polygon|g|defs|use|symbol|text|tspan)\\b"
        },
        {
          "name": "entity.other.attribute-name.pseudo-class.css.rics",
          "match": "::?[a-zA-Z][a-zA-Z0-9-]*(?:\\([^)]*\\))?"
        },
        {
          "name": "variable.language.parent-selector.scss.rics",
          "match": "&"
        },
        {
          "name": "meta.attribute-selector.css.rics",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            { "include": "#string" },
            { "match": "[a-zA-Z_-][a-zA-Z0-9_-]*", "name": "entity.other.attribute-name.css.rics" },
            { "match": "[~|^$*]?=", "name": "keyword.operator.comparison.css.rics" }
          ]
        },
        {
          "name": "punctuation.separator.combinator.css.rics",
          "match": "[>+~]"
        },
        {
          "name": "punctuation.separator.list.comma.css.rics",
          "match": ","
        },
        { "include": "#interpolation" }
      ]
    },
    "property-list": {
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.section.property-list.begin.css.rics" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.property-list.end.css.rics" }
      },
      "patterns": [
        { "include": "#comment" },
        { "include": "#at-rule" },
        { "include": "#variable-declaration" },
        { "include": "#property" },
        { "include": "#ruleset" }
      ]
    },
    "property": {
      "begin": "(?<![-a-zA-Z])([a-zA-Z-][a-zA-Z0-9-]*)\\s*(:)(?!:)",
      "beginCaptures": {
        "1": { "name": "support.type.property-name.css.rics" },
        "2": { "name": "punctuation.separator.key-value.css.rics" }
      },
      "end": ";|(?=\\})",
      "endCaptures": {
        "0": { "name": "punctuation.terminator.rule.css.rics" }
      },
      "patterns": [
        { "include": "#value" }
      ]
    },
    "value": {
      "patterns": [
        { "include": "#comment" },
        { "include": "#variable" },
        { "include": "#interpolation" },
        { "include": "#string" },
        { "include": "#color" },
        { "include": "#numeric" },
        { "include": "#function" },
        { "include": "#operator" },
        { "include": "#keyword" },
        { "include": "#important" }
      ]
    },
    "function": {
      "begin": "([a-zA-Z_-][a-zA-Z0-9_-]*)\\s*(\\()",
      "beginCaptures": {
        "1": { "name": "support.function.css.rics" },
        "2": { "name": "punctuation.section.function.begin.css.rics" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.function.end.css.rics" }
      },
      "patterns": [
        { "include": "#value" },
        { "match": ",", "name": "punctuation.separator.list.comma.css.rics" }
      ]
    },
    "function-parameters": {
      "begin": "\\(",
      "beginCaptures": {
        "0": { "name": "punctuation.section.parameters.begin.scss.rics" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.parameters.end.scss.rics" }
      },
      "patterns": [
        { "include": "#variable" },
        { "include": "#value" },
        { "match": ":", "name": "punctuation.separator.key-value.scss.rics" },
        { "match": ",", "name": "punctuation.separator.list.comma.scss.rics" }
      ]
    },
    "function-arguments": {
      "begin": "\\(",
      "beginCaptures": {
        "0": { "name": "punctuation.section.arguments.begin.scss.rics" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.arguments.end.scss.rics" }
      },
      "patterns": [
        { "include": "#variable" },
        { "include": "#value" },
        { "match": ",", "name": "punctuation.separator.list.comma.scss.rics" }
      ]
    },
    "map-or-list": {
      "begin": "\\(",
      "beginCaptures": {
        "0": { "name": "punctuation.section.list.begin.scss.rics" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.list.end.scss.rics" }
      },
      "patterns": [
        { "include": "#variable" },
        { "include": "#value" },
        { "match": ":", "name": "punctuation.separator.key-value.scss.rics" },
        { "match": ",", "name": "punctuation.separator.list.comma.scss.rics" }
      ]
    },
    "color": {
      "patterns": [
        {
          "name": "constant.other.color.rgb-value.hex.css.rics",
          "match": "#[0-9a-fA-F]{3,8}\\b"
        },
        {
          "name": "support.constant.color.w3c-standard-color-name.css.rics",
          "match": "\\b(aliceblue|antiquewhite|aqua|aquamarine|azure|beige|bisque|black|blanchedalmond|blue|blueviolet|brown|burlywood|cadetblue|chartreuse|chocolate|coral|cornflowerblue|cornsilk|crimson|cyan|darkblue|darkcyan|darkgoldenrod|darkgray|darkgreen|darkgrey|darkkhaki|darkmagenta|darkolivegreen|darkorange|darkorchid|darkred|darksalmon|darkseagreen|darkslateblue|darkslategray|darkslategrey|darkturquoise|darkviolet|deeppink|deepskyblue|dimgray|dimgrey|dodgerblue|firebrick|floralwhite|forestgreen|fuchsia|gainsboro|ghostwhite|gold|goldenrod|gray|green|greenyellow|grey|honeydew|hotpink|indianred|indigo|ivory|khaki|lavender|lavenderblush|lawngreen|lemonchiffon|lightblue|lightcoral|lightcyan|lightgoldenrodyellow|lightgray|lightgreen|lightgrey|lightpink|lightsalmon|lightseagreen|lightskyblue|lightslategray|lightslategrey|lightsteelblue|lightyellow|lime|limegreen|linen|magenta|maroon|mediumaquamarine|mediumblue|mediumorchid|mediumpurple|mediumseagreen|mediumslateblue|mediumspringgreen|mediumturquoise|mediumvioletred|midnightblue|mintcream|mistyrose|moccasin|navajowhite|navy|oldlace|olive|olivedrab|orange|orangered|orchid|palegoldenrod|palegreen|paleturquoise|palevioletred|papayawhip|peachpuff|peru|pink|plum|powderblue|purple|rebeccapurple|red|rosybrown|royalblue|saddlebrown|salmon|sandybrown|seagreen|seashell|sienna|silver|skyblue|slateblue|slategray|slategrey|snow|springgreen|steelblue|tan|teal|thistle|tomato|transparent|turquoise|violet|wheat|white|whitesmoke|yellow|yellowgreen|currentColor)\\b"
        }
      ]
    },
    "numeric": {
      "name": "constant.numeric.css.rics",
      "match": "-?(?:\\d+\\.?\\d*|\\.\\d+)(?:px|em|rem|%|vh|vw|vmin|vmax|ch|ex|cm|mm|in|pt|pc|deg|rad|grad|turn|s|ms|fr|dpi|dpcm|dppx|Hz|kHz)?\\b"
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.css.rics",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "match": "\\\\.", "name": "constant.character.escape.css.rics" },
            { "include": "#interpolation" }
          ]
        },
        {
          "name": "string.quoted.single.css.rics",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "match": "\\\\.", "name": "constant.character.escape.css.rics" },
            { "include": "#interpolation" }
          ]
        }
      ]
    },
    "operator": {
      "patterns": [
        { "match": "==|!=|<=|>=|<|>", "name": "keyword.operator.comparison.scss.rics" },
        { "match": "\\b(and|or|not)\\b", "name": "keyword.operator.logical.scss.rics" },
        { "match": "[+\\-*/%]", "name": "keyword.operator.arithmetic.scss.rics" }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "support.constant.property-value.css.rics",
          "match": "\\b(none|auto|inherit|initial|unset|revert|normal|bold|bolder|lighter|italic|oblique|underline|overline|line-through|solid|dashed|dotted|double|groove|ridge|inset|outset|hidden|visible|scroll|fixed|local|cover|contain|top|right|bottom|left|center|baseline|middle|sub|super|text-top|text-bottom|absolute|relative|static|sticky|flex|inline-flex|grid|inline-grid|block|inline|inline-block|table|list-item|contents|flow-root|nowrap|pre|pre-wrap|pre-line|break-spaces|row|row-reverse|column|column-reverse|wrap|wrap-reverse|stretch|flex-start|flex-end|space-between|space-around|space-evenly|start|end|ease|ease-in|ease-out|ease-in-out|linear|step-start|step-end|forwards|backwards|both|running|paused|alternate|alternate-reverse|infinite|border-box|content-box|padding-box|pointer|default|text|move|wait|help|progress|not-allowed|grab|grabbing|zoom-in|zoom-out|crosshair|cell|alias|copy|no-drop|all-scroll|col-resize|row-resize|dark|light|repeat|no-repeat|repeat-x|repeat-y|round|space|clip|ellipsis|break-word|break-all|keep-all|uppercase|lowercase|capitalize|small-caps|ltr|rtl|horizontal|vertical|collapse|separate|always|avoid|serif|sans-serif|monospace|cursive|fantasy|system-ui|ui-serif|ui-sans-serif|ui-monospace|ui-rounded)\\b"
        },
        {
          "name": "support.constant.vendor-prefix.css.rics",
          "match": "-(?:webkit|moz|ms|o|apple)-[a-zA-Z][a-zA-Z0-9-]*"
        },
        {
          "name": "constant.language.boolean.scss.rics",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "important": {
      "name": "keyword.other.important.css.rics",
      "match": "!\\s*important\\b"
    },
    "media-query": {
      "patterns": [
        { "match": "\\b(all|print|screen|speech)\\b", "name": "support.constant.media.css.rics" },
        { "match": "\\b(and|or|not|only)\\b", "name": "keyword.operator.logical.media.css.rics" },
        { "match": "\\b(min-width|max-width|min-height|max-height|width|height|orientation|aspect-ratio|resolution|prefers-color-scheme|prefers-reduced-motion|hover|pointer)\\b", "name": "support.type.property-name.media.css.rics" },
        { "include": "#numeric" },
        { "include": "#variable" }
      ]
    },
    "keyframe-block": {
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.section.keyframes.begin.css.rics" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.keyframes.end.css.rics" }
      },
      "patterns": [
        { "include": "#comment" },
        {
          "begin": "(from|to|\\d+%)",
          "beginCaptures": {
            "1": { "name": "entity.other.keyframe-offset.css.rics" }
          },
          "end": "(?<=\\})",
          "patterns": [
            { "include": "#property-list" }
          ]
        }
      ]
    }
  }
}
